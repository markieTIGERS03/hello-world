set file [open "flash0:testfile" "w"]
close $file

set file [open "flash0:clearint" "r"]
set contents [read $file]
close $file

append contents "typeahead \"\\r\"\r"
append contents "exec \{clear counters Gi0/1\}\r"
append contents "typeahead \"show ip route\\n\"\r"

set file [open "flash0:clearint" "w"]
puts $file $contents
close $file
