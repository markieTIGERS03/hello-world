set file [open "flash0:testfile" "w"]
close $file

set file [open "flash0:testfile" "r"]
set contents [read $file]
close $file

append contents "exec term len 0"
append contents "\r"
append contents "terminal international\r"
append contents "puts \"Start of config\" \r\r"
append contents "ios_config \"interface Gi0/0\" \"vrf forwarding Mgmt-intf\" \"ip address 10.255.0.7 255.255.0.0\"\r"

set file [open "flash0:testfile" "w"]
puts $file $contents
close $file

